link(rel="stylesheet", href="/css/ranking.css")
script(src="/js/ranking.js")
script(src="/js/recommend.js") 
section.performance.info#ranking
    div.ranking
        div.title
            button.perform 공연 랭킹
            span |
            button.genre.hover 장르별 랭킹
    
        div.sub-title
            button.active(data-index="1") 국내
            button(data-index="2") 내한
            button(data-index="3") 페스티벌
        div.detail
                div.poster1
                    - for(let i = 0; i < 2; i++)
                        a(href="")
                            img(src=`${concerts[i].concert_poster}`, alt="")
                            div
                                div.title= concerts[i].concert_name
                                div.date= concerts[i].start_date + "-" + concerts[i].end_date
    
                div.poster2
                    - for(let i = 2; i < 4; i++)
                        a(href="")
                            img(src=`${concerts[i].concert_poster}`, alt="")
                            div
                                div.title= concerts[i].concert_name
                                div.date= concerts[i].start_date + "-" + concerts[i].end_date
    div.recommend
        div.recommend-title 추천 공연
        div.sub-title
            button.active(data-index="1") 국내
            button(data-index="2") 내한
            button(data-index="3") 페스티벌
        div.detail 
            div.big-poster
                a(href="")
                    img(src=`${recommends[0].concert_poster}`, alt="")
                    div.title= recommends[0].concert_name
                    div.date= recommends[0].start_date + "-" + recommends[0].end_date
            div.sub-posters
                - for(let i = 1; i < 3; i++)
                        a(href="")
                            img(src=`${recommends[i].concert_poster}`, alt="")
                            div
                                div.title= recommends[i].concert_name
                                div.date= recommends[i].start_date + "-" + recommends[i].end_date