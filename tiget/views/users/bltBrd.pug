                            td 2022-11-18
                            td 12
                div.categorysearch
                    select(name="search") 
                        option(value="title+content") 제목+내용
                        option(value="title") 제목
                        option(value="content") 내용
                        option(value="writer") 글쓴이
                    input(type="text")
                    button 검색
