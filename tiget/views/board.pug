extends layout

block content
    script(src="/js/board/reply.js") 
    link(rel="stylesheet" href="/css/main/board.css")
    .overflow
        .boardContainer
            .firstcontainer
                span 작성자:
                div= result.b_nickname            
                span 작성일자:
                div= result.b_update_date
                div= result.sort_board
            .secondcontainer
                span 제목
                div= result.b_title
            .textcontainer
                div= result.b_content
            .replycontainer(data-seq=result.seq)             
                each reply in replies
                    div.reply
                        .imgexample
                        .example 
                            div.replyinfo
                                span 작성일시  : #{reply.r_update_date}
                                span 작성자  : #{reply.r_nickname}
                            div.replies= reply.r_content
            div.replywrite                    
                input(name="content" placeholder="          댓글을 입력하세요.")#input
                button(type="button").replyAdd 댓글추가